<%if (session[:user_id]) %>
        <% @user =  User.find(session[:user_id])%>
<% end %>
 <%   if( @user )  %>
<center>
<p>
  <b><%u = User.find(@post.user_id)%> Question from <%= u.user_name %>:</b>
  <br>
  <%= @post.title %>
  <br><br>
  <b>Responses: </b><br>
  <% @replies.each do |reply|%>
